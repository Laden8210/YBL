<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F7"
    tools:context=".view.ScheduleDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:elevation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:title="Schedule Details"
            app:titleCentered="true"
            app:titleTextColor="#000000" />

        <!-- Thin divider under toolbar -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C6C6C8" />

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Route Name and Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:id="@+id/tvRouteName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Route Name"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif-medium" />

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pending"
                        android:textSize="13sp"
                        android:paddingHorizontal="14dp"
                        android:paddingVertical="6dp"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:fontFamily="sans-serif-medium"
                        android:background="@drawable/bg_status_pending" />

                </LinearLayout>

                <!-- Time Information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Departure Time"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvDepartureTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="08:00 AM"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.3"
                        android:background="#E5E5EA"
                        android:layout_marginHorizontal="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="end">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Arrival Time"
                            android:textSize="13sp"
                            android:textColor="#8E8E93"
                            android:fontFamily="sans-serif"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/tvArrivalTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09:30 AM"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:fontFamily="sans-serif-medium" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Duration -->
                <TextView
                    android:id="@+id/tvDuration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Duration: 1h 30m"
                    android:textSize="13sp"
                    android:textColor="#8E8E93"
                    android:fontFamily="sans-serif" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bus Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bus Information"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bus Number"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvBusNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5EA"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="License Plate"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvLicensePlate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ABC-123"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5EA"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Model"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvBusModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volvo B7R"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5EA"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Capacity"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvBusCapacity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50 passengers"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Route Information Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Route Information"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <!-- Start Point -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"
                    android:textSize="13sp"
                    android:textColor="#8E8E93"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvStartPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Start Location"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="16dp" />

                <!-- End Point -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"
                    android:textSize="13sp"
                    android:textColor="#8E8E93"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvEndPoint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="End Location"
                    android:textSize="15sp"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif"
                    android:layout_marginBottom="16dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5EA"
                    android:layout_marginBottom="12dp" />

                <!-- Route Details -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Distance"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="25 km"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5EA"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Estimated Duration"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvEstimatedDuration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1h 30m"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Schedule Details Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="12dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Schedule Details"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:fontFamily="sans-serif-medium"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Day of Week"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvDayOfWeek"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5EA"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Recurring"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvRecurring"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5EA"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Effective Date"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvEffectiveDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-01-01"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="#E5E5EA"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="End Date"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        android:fontFamily="sans-serif" />

                    <TextView
                        android:id="@+id/tvEndDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024-12-31"
                        android:textSize="15sp"
                        android:textColor="#8E8E93"
                        android:fontFamily="sans-serif" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnStartTrip"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="12dp"
                android:text="Start Trip"
                android:textAllCaps="false"
                android:textSize="17sp"
                android:fontFamily="sans-serif-medium"
                app:cornerRadius="12dp"
                style="@style/Widget.Material3.Button" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnReportIssue"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="6dp"
                    android:text="Report Issue"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

                <Button
                    android:id="@+id/btnNavigate"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:layout_marginStart="6dp"
                    android:text="Navigate"
                    android:textAllCaps="false"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif"
                    app:cornerRadius="12dp"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>